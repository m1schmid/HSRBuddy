<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <!-- TITLE -->
    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:padding="5dp"
        android:text="@string/main_title"
        android:textSize="25dp" />
    
        <!--homeScreenBalance -->
    <TextView
        android:id="@+id/homeScreenBalance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/home_screen_balance"
        android:textSize="12dp" />

    <!-- 1.Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false" >

        <RelativeLayout
            android:id="@+id/activity_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:baselineAligned="false"
            android:onClick="open">

            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/iconMenuDescrption"
                android:src="@drawable/ic_food" />

            <TextView
                android:id="@+id/menuIconText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuIcon"
                android:layout_centerInParent="true"
                android:text="@string/icon_text_menu" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_prices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:baselineAligned="false"
            android:onClick="open"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/priceIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/iconPricesDescrption"
                android:src="@drawable/ic_prices" />

            <TextView
                android:id="@+id/priceIconText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/priceIcon"
                android:layout_centerInParent="true"
                android:text="@string/icon_text_prices" />
        </RelativeLayout>
    </LinearLayout>

    <!-- 2. Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false" >

        <RelativeLayout
            android:id="@+id/activity_badge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:baselineAligned="false"
            android:onClick="open">

            <ImageView
                android:id="@+id/badgeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/iconBadgeDescrption"
                android:src="@drawable/ic_badge" />

            <TextView
                android:id="@+id/badgeIconText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/badgeIcon"
                android:layout_centerInParent="true"
                android:text="@string/icon_text_badge" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:baselineAligned="false"
            android:onClick="open">

            <ImageView
                android:id="@+id/mapIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/iconMapDescrption"
                android:src="@drawable/ic_map" />

            <TextView
                android:id="@+id/mapIconText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mapIcon"
                android:layout_centerInParent="true"
                android:text="@string/icon_text_map" />
        </RelativeLayout>
    </LinearLayout>

    <!-- 3.Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false" >

        <RelativeLayout
            android:id="@+id/activity_dates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:baselineAligned="false"
            android:onClick="open">

            <ImageView
                android:id="@+id/datesIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/iconDatesDescrption"
                android:src="@drawable/ic_dates" />

            <TextView
                android:id="@+id/datesIconText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/datesIcon"
                android:layout_centerInParent="true"
                android:text="@string/icon_text_dates" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:baselineAligned="false"
            android:onClick="open">

            <ImageView
                android:id="@+id/infoIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/iconInfoDescrption"
                android:src="@drawable/ic_info" />

            <TextView
                android:id="@+id/infoIconText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/infoIcon"
                android:layout_centerInParent="true"
                android:text="@string/icon_text_info" />
        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>