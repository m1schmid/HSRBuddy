<!-- ATM ALL THE ICONS USED HERE ARE LAUNCH ICONS, WHICH IS TECHNICALY NOT CORRECT FOR ANDROID,
	 BUT NEEDED FOR COLORED ICONS. COLIN 11.10.12
 -->


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- TITLE -->
    <TextView
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:padding="5dp"
        android:text="@string/main_title"
        android:textSize="25dp" >
    </TextView>

     <!-- 1.Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
		<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal" >
        
	        <ImageView
	            android:id="@+id/activity_menu"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical|center_horizontal"
	            android:layout_weight="0.5"
	            android:onClick="open"
	            android:src="@drawable/ic_food" />
	        
	            <TextView
	                android:id="@+id/editText1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical|center_horizontal"
	                android:text="@string/icon_text_menu" >

			    </TextView>
			    
	    </LinearLayout>
        
		<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal" >
				
	        <ImageView
	            android:id="@+id/activity_prices"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical|center_horizontal"
	            android:layout_weight="0.5"
	            android:onClick="open"
	            android:src="@drawable/ic_prices" />
	        
	       	<TextView
	       	    android:id="@+id/editText1"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:layout_gravity="center_vertical|center_horizontal"
	       	    android:text="@string/icon_text_prices" >

		    </TextView>
	    
	    </LinearLayout>	
        
    </LinearLayout>

     <!-- 2. Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

		<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal" >
        
	        <ImageView
	            android:id="@+id/activity_badge"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical|center_horizontal"
	            android:layout_weight="0.5"
	            android:onClick="open"
	            android:src="@drawable/ic_badge" />
	        
	            <TextView
	                android:id="@+id/editText1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical|center_horizontal"
	                android:text="@string/icon_text_badge" >

			    </TextView>
			    
	    </LinearLayout>
        
		<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal" >
				
	        <ImageView
	            android:id="@+id/activity_map"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical|center_horizontal"
	            android:layout_weight="0.5"
	            android:onClick="open"
	            android:src="@drawable/ic_map" />
	        
	       	<TextView
	       	    android:id="@+id/editText1"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:layout_gravity="center_vertical|center_horizontal"
	       	    android:text="@string/icon_text_map" >

		    </TextView>
	    
	    </LinearLayout>	
        
    </LinearLayout>

	<!-- 3.Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

		<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal" >
        
	        <ImageView
	            android:id="@+id/activity_dates"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical|center_horizontal"
	            android:layout_weight="0.5"
	            android:onClick="open"
	            android:src="@drawable/ic_dates" />
	        
	            <TextView
	                android:id="@+id/editText1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical|center_horizontal"
	                android:text="@string/icon_text_dates" >

			    </TextView>
			    
	    </LinearLayout>
        
		<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal" >
				
	        <ImageView
	            android:id="@+id/activity_info"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical|center_horizontal"
	            android:layout_weight="0.5"
	            android:onClick="open"
	            android:src="@drawable/ic_info" />
	        
	       	<TextView
	       	    android:id="@+id/editText1"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:layout_gravity="center_vertical|center_horizontal"
	       	    android:text="@string/icon_text_info" >

		    </TextView>
	    
	    </LinearLayout>	
        
    </LinearLayout>

</LinearLayout>