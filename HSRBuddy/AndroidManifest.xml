<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.hsr.hsrbuddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hsr.hsrbuddy.MainActivity" />
        </activity>
        <activity
            android:name=".PriceActivity"
            android:label="@string/title_activity_price" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hsr.hsrbuddy.MainActivity" />
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="@string/title_activity_map" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hsr.hsrbuddy.MainActivity" />
        </activity>
        <activity
            android:name=".BadgeActivity"
            android:label="@string/title_activity_badge" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hsr.hsrbuddy.MainActivity" />
        </activity>
        <activity
            android:name=".InfoActivity"
            android:label="@string/title_activity_info" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hsr.hsrbuddy.MainActivity" />
        </activity>
        <activity
            android:name=".DatesActivity"
            android:label="@string/title_activity_dates" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hsr.hsrbuddy.MainActivity" />
        </activity>
    </application>

</manifest>